{
  "compilerOptions": {
    "module": "commonjs",
    "allowJs": true,
    "esModuleInterop": true,
    "target": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "noImplicitAny": true,
    "skipLibCheck": true
  },
  "include": ["./src/**/*", "../common/**/*"],
  "exclude": ["node_modules", "obj", "bin", "dist", "**/*.spec.ts"]
}
